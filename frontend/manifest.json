{
  "manifest_version": 3,
  "name": "FactScope",
  "version": "0.1",
  "description": "Inline detection of spam, phishing and AI-generated content with plain-English explanations.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://mail.google.com/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "https://mail.google.com/*",
        "https://*/*"
      ],
      "js": ["content/content_script.js"],
      "css": ["content/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "FactScope"
  }
}
